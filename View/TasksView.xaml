<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppToDo.View.TasksView"
             xmlns:vm="clr-namespace:MauiAppToDo.ViewModel"
             Title="TasksView">
    <Grid Background="WhiteSmoke" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Zone d’ajout -->
            <RowDefinition Height="*"/>
            <!-- Zone principale -->
        </Grid.RowDefinitions>

        <!-- #region Barre du haut-->
        <StackPanel Grid.Row="0" Orientation="Vertical" Margin="12,12,12,10" VerticalAlignment="Center">

            <Border Background="#1764D3" Padding="12">
                <TextBlock Text="{Binding WorkspaceDisplayName}"
              FontSize="22"
              Foreground="White"
              FontWeight="Bold"/>
            </Border>
            <!-- Bouton Créer placé à droite -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,10,0">
                <Button Content="+ Créer une tache"
              Width="150" Height="35"
              Style="{StaticResource CreateButtonStyle}"
              Background="#1764D3"
              Command="{Binding OpenAddTaskModalCommand}"/>
            </StackPanel>

        </StackPanel>
        <!--#endregion-->

        <!-- #region Zone des status-->
        <Grid Grid.Row="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- #region Taches À faire -->
            <Border Grid.Column="0" Background="#3498DB" CornerRadius="10" Padding="10" Margin="10">
                <StackPanel>
                    <TextBlock Text="À faire" FontWeight="Bold" FontSize="18" Margin="0,0,0,10" />
                    <!--#region Region où va etre la liste de tache a faire-->
                    <ListBox ItemsSource="{Binding Tasks}" SelectedItem="{Binding SelectedTask}"
                            Background="Transparent" BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border   CornerRadius="6" Padding="10" Margin="0,0,0,10">
                                    <TextBlock Text="{Binding Title}" FontSize="14" />
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <!--#endregion-->
                </StackPanel>
            </Border>
            <!--#endregion-->

            <!-- #region  Taches en cours -->
            <Border Grid.Column="1" Background="#F1C40F" CornerRadius="10" Padding="10"  Margin="10">
                <StackPanel>
                    <TextBlock Text="En cours" FontWeight="Bold" FontSize="18" Margin="0,0,0,10" />
                    <!-- #region  Region où va etre la liste de tache en cours -->
                    <ListBox ItemsSource="{Binding Tasks}"
                            SelectedItem="{Binding SelectedTask}"
                            BorderThickness="0"
                            Background="Transparent">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border  CornerRadius="6" Padding="10" Margin="0,0,0,10">
                                    <TextBlock Text="{Binding Title}" FontSize="14" />
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <!-- #endregion -->
                </StackPanel>
            </Border>
            <!--#endregion-->

            <!-- #region Taches terminer -->
            <Border Grid.Column="2" Background="#2ECC71" CornerRadius="10" Padding="10"  Margin="10">
                <StackPanel>
                    <TextBlock Text="Terminé" FontWeight="Bold" FontSize="18" Margin="0,0,0,10" />
                    <!--#region Region où va etre la liste de tache en cours -->
                    <ListBox ItemsSource="{Binding Tasks}" SelectedItem="{Binding SelectedTask}"
                            BorderThickness="0" Background="Transparent">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border CornerRadius="6" Padding="10" Margin="0,0,0,10">
                                    <TextBlock Text="{Binding Title}" FontSize="14" />
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <!-- #endregion -->
                </StackPanel>
            </Border>
            <!-- #endregion -->
        </Grid>
        <!-- #endregion -->

    </Grid>
</ContentPage>